<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_mine_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:navigationIcon="@mipmap/back_black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="用户中心" />
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.itheima.roundedimageview.RoundedImageView
            android:id="@+id/activity_mine_avatar"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:src="@mipmap/default_avatar"
            app:riv_corner_radius="100dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@id/activity_mine_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_mine_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="用户名"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_mine_isVip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:text="普通会员"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/activity_mine_sobCoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SOB币:0"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </LinearLayout>

        <com.hjq.shape.view.ShapeButton
            android:id="@+id/activity_mine_becomeVip"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="成为VIP"
            android:textColor="@color/white"
            app:shape_radius="10dp"
            app:shape_solidColor="#FDBCBC" />
    </RelativeLayout>

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:shape_solidColor="#FDBCBC"
        app:shape_topLeftRadius="25dp"
        app:shape_topRightRadius="25dp">

        <RelativeLayout
            android:id="@+id/activity_mine_company"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="公司" />

            <TextView
                android:id="@+id/activity_mine_company_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20sp"
                android:drawableEnd="@mipmap/join"
                android:gravity="center"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_700" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_mine_position"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="职位" />

            <TextView
                android:id="@+id/activity_mine_position_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20sp"
                android:drawableEnd="@mipmap/join"
                android:gravity="center"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_700" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_mine_skill"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="技能" />

            <TextView
                android:id="@+id/activity_mine_skill_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20sp"
                android:drawableEnd="@mipmap/join"
                android:gravity="center"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_700" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_mine_coordinate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="坐标" />

            <TextView
                android:id="@+id/activity_mine_coordinate_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20sp"
                android:drawableEnd="@mipmap/join"
                android:gravity="center"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_700" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_mine_sign"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="签名" />

            <TextView
                android:id="@+id/activity_mine_sign_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20sp"
                android:drawableEnd="@mipmap/join"
                android:gravity="center"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_700" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_mine_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="手机" />

            <TextView
                android:id="@+id/activity_mine_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20sp"
                android:drawableEnd="@mipmap/join"
                android:gravity="center"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_700" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_mine_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="邮箱" />

            <TextView
                android:id="@+id/activity_mine_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20sp"
                android:drawableEnd="@mipmap/join"
                android:gravity="center"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_700" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_mine_modifyPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="密码" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20sp"
                android:drawableEnd="@mipmap/join"
                android:gravity="center"
                android:text="修改密码" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_700" />

        </RelativeLayout>

        <com.hjq.shape.view.ShapeButton
            android:id="@+id/activity_mine_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="100dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="退出登录"
            android:textColor="@color/red_200"
            android:textSize="20sp"
            app:shape_radius="10dp"
            app:shape_solidColor="@color/white" />

    </com.hjq.shape.layout.ShapeLinearLayout>


</LinearLayout>