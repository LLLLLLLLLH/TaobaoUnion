<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <com.itheima.roundedimageview.RoundedImageView
        android:id="@+id/item_home_goods_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        app:riv_corner_radius="6dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_home_pager_good_title"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginEnd="7dp"
            android:text="石墨烯加热眼罩热敷usb充电发热睡觉遮光石墨烯加热眼罩热敷usb充电发热睡觉遮..."
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_home_pager_user_type"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:background="@drawable/shape_tag_bg"
                android:text="天猫"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="54dp"
                android:layout_height="18dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_securities_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_securities_tv_bg"
                    android:gravity="center"
                    android:text="劵"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/item_home_pager_securities"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="59元"
                    android:textColor="#fff5a623"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="22dp"
                android:layout_height="14sp"
                android:gravity="center"
                android:text="劵后"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_home_pager_aftermarketPrice"
                android:layout_width="49dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="￥39.90"
                android:textColor="#fff5a623"
                android:layout_marginStart="3dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_home_pager_originalPrice"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:gravity="center"
                android:layout_marginStart="3dp"
                android:text="￥99.99"
                android:textColor="#ff9b9b9b"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_home_pager_volume"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginEnd="15dp"
                android:gravity="right"
                android:text="已售2.12万"
                android:textColor="#ff9b9b9b"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>