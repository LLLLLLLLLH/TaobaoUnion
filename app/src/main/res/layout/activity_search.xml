<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/teal_200">

        <EditText
            android:id="@+id/activity_search_edit"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_toLeftOf="@id/activity_search_btn"
            android:background="@drawable/searchbox_selector"
            android:hint="请输入关键字搜索"
            android:inputType="text"
            android:paddingStart="20dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/activity_search_btn"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:text="搜索"
            android:layout_marginStart="9dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/activity_search_remove"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_toStartOf="@id/activity_search_btn"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/remove"
            />

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/activity_search_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>